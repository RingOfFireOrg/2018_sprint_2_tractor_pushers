void commandDirectory(input){
  char temp=drive+grabber;//0, 1-7, 8-9 for emergencyStop, drive, and grabber
  for(int i=0; i<10; i++){
    if(input==temp[i]){
      if(i==0){//emergencystop
        if(!emergencySwitch){//if false
          emergencySwitch=true;
        }
        else if(emergencySwitch){//if true
          emergencySwitch=false;
        }
      }
      else if((i>0)&&(i<8)&&(emergencySwitch)){//drive
        driveCommand(input);
      }
      else if(((i==8)||(i==9))&&(emergencySwitch)){//grabber
        
      }
      else{//?
      
      }
    }
  }
  
}

